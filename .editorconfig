root = true

[*]
# Encoding
charset = utf-8

# Newlines
end_of_line = lf
insert_final_newline = true

# Indentation
indent_style = space
indent_size = 4
tab_width = 4

# Line of code
max_line_length = 100
trim_trailing_whitespace = true

[{*.md, *.markdown}]
max_line_length = 79
trim_trailing_whitespace = false
indent_size = 3
tab_width = 3

[{*.yml, *.yaml, *.json, *.md}]
indent_size = 2
